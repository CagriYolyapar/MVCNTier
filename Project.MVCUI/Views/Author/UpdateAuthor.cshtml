@model AuthorVM
@{
    ViewBag.Title = "UpdateAuthor";
}


@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.AuthorInstance.ID)
    <div>
        @Html.TextBoxFor(x => x.AuthorInstance.FirstName, new { @class = "form-control" })
    </div>
    <div>
        @Html.TextBoxFor(x => x.AuthorInstance.LastName, new { @class = "form-control" })
    </div>

    <div>
        <button class="btn btn-primary">
           Güncelle
        </button>
    </div>
}

